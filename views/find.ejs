<!DOCTYPE html>
<html>
<head>
    <% include partial/head.ejs %>
    <script>
        $(function () {
            $('.device').on('click', function () {
                findDevice.find($(this).attr('data-device-id'));
                return false;
            })
        });
    </script>
</head>
<body>

<% include partial/menu.ejs %>

<div class="container-fluid">
    <div class="row content">
        <div class="main-content col-sm-9 col-sm-offset-3">
            <h1 class="page-header"><i class="fa fa-search fa-fw"></i> Найти устройство</h1>
            <div class="row">
                <div class="col-sm-6">
                    <div class="well">
                        <div class="dropdown">
                            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                Dropdown
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                <% devices.forEach(function (device) { %>
                                <li><a class="device" data-device-id="<%= device._id %>">
                                        <%= device.deviceType +
                                            (device.model ? ' | ' + device.model : '') +
                                            (device.name ? ' | ' + device.name : '') %>
                                    </a></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="well">
                        <div id="result"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
